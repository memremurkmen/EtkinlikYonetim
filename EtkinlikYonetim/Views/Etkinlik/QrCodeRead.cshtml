@model Guid
@{
    ViewData["Title"] = "Qr Kod Okut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <form method="post" enctype="multipart/form-data" asp-controller="Etkinlik" asp-action="QrCodeRead">
        <input type="text" style="visibility: hidden;" hidden name="etkinlikId" value="@ViewBag.etkinlikId" />
        <div class="form-group">
            <div class="col-md-10">
                <p>Qr Kodunuzu seçiniz:</p>
                <input type="file" class="btn btn-light" name="files" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" class="btn btn-primary" value="Qr Kod Okut" />
            </div>
        </div>
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.QrText))
    {
        <div>
            <h5>
                @ViewBag.QrText
            </h5>
        </div>
    }
</div>
