@model EtkinlikYonetim.Models.EyKullanici

@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcı Sil</h1>

<h3>Kullanıcıyı silmek istediğinize emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Ad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-2">
            Soyad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt class="col-sm-2">
            Telefon No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefonNo)
        </dd>
        <dt class="col-sm-2">
            TC No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcNo)
        </dd>
        <dt class="col-sm-2">
            Sifre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sifre)
        </dd>
        <dt class="col-sm-2">
            Yetki
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Yetki)
        </dd>
    </dl>
    
    <form asp-action="KullaniciSil">
        <input type="hidden" asp-for="KullaniciId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Kullanicilar">Listeye geri dön</a>
    </form>
</div>
